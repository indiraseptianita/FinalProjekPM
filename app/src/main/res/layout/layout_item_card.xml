<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_cardView"
    android:layout_margin="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_card">

        <!--Poster Image Movie-->
        <ImageView
            android:layout_width="400px"
            android:layout_height="400px"
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_imageMovie"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_titleMovie"
            android:text="Judul Movie"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/iv_imageMovie"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_yearsMovie"
            android:text="Tahun Release"
            android:textAlignment="center"
            android:textSize="10sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_titleMovie"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>